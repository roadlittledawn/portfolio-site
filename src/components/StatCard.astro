---
/**
 * StatCard Component
 * Displays a statistic with value and label
 */
export interface Props {
  value: number | string;
  label: string;
  id?: string;
  className?: string;
}

const { value, label, id, className = '' } = Astro.props;
---

<div class={`bg-dark-card rounded-lg p-4 text-center hover:bg-dark-hover transition-colors ${className}`}>
  <span 
    class="stat-value block text-3xl font-bold text-accent-blue"
    id={id}
  >
    {value}
  </span>
  <span class="text-sm text-text-secondary font-medium">{label}</span>
</div>