---
/**
 * FocusCard Component  
 * Card for homepage focus areas (Technical Writing & Software Engineering)
 */
export interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
  className?: string;
}

const { 
  title,
  description,
  href,
  icon,
  className = '' 
} = Astro.props;
---

<a 
  href={href}
  class={`block bg-white rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300 p-8 text-center group ${className}`}
>
  {icon && (
    <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-200">
      {icon}
    </div>
  )}
  
  <h3 class="text-xl font-semibold text-primary-dark mb-3 group-hover:text-primary transition-colors">
    {title}
  </h3>
  
  <p class="text-gray-600 leading-relaxed">
    {description}
  </p>
  
  <!-- Slot for additional content -->
  <slot />
</a>