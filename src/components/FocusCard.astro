---
/**
 * FocusCard Component
 * Card for homepage focus areas (Technical Writing & Software Engineering)
 */
import Icon from './Icon.astro';

export interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
  className?: string;
}

const {
  title,
  description,
  href,
  icon,
  className = ''
} = Astro.props;
---

<a
  href={href}
  class={`block bg-dark-card rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 hover:bg-dark-hover transition-all duration-300 p-8 text-center group ${className}`}
>
  {icon && (
    <div class="mb-4 group-hover:scale-110 transition-transform duration-200 flex justify-center">
      <Icon name={icon} size="48" class="text-text-muted group-hover:text-accent-blue transition-colors" />
    </div>
  )}

  <h3 class="text-xl font-semibold text-text-primary mb-3 group-hover:text-accent-blue transition-colors">
    {title}
  </h3>
  
  <p class="text-text-secondary leading-relaxed">
    {description}
  </p>
  
  <!-- Slot for additional content -->
  <slot />
</a>