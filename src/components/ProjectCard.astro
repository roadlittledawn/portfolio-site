---
/**
 * ProjectCard Component
 * Displays a project with metadata and links
 */
export interface Props {
  project: {
    name: string;
    displayName?: string;
    summary?: string;
    description?: string;
    type?: string;
    url?: string;
    website?: string;
    githubUrl?: string;
    languages?: string[];
    libraries?: string[];
    focus?: string[];
    featured?: boolean;
  };
  className?: string;
}

const { project, className = '' } = Astro.props;

const projectUrl = project.url || project.website;
const projectTitle = project.displayName || project.name;

// Get project type icon and label
const getProjectType = (type?: string) => {
  const types = {
    documentation: { icon: 'üìö', label: 'Documentation' },
    website: { icon: 'üåê', label: 'Web App' },
    'writing-sample': { icon: 'üìù', label: 'Writing Sample' },
    tool: { icon: 'üîß', label: 'Tool' },
    library: { icon: 'üì¶', label: 'Library' }
  };
  return types[type || 'website'] || types.website;
};

const typeInfo = getProjectType(project.type);
---

<article 
  class={`project-card bg-white border border-gray-200 rounded-xl p-6 hover:shadow-xl hover:-translate-y-1 transition-all duration-200 ${className}`}
  data-focus={project.focus?.join(' ')} 
  data-type={project.type}
>
  <!-- Header -->
  <div class="mb-4">
    <h3 class="text-xl font-semibold text-primary-dark mb-2">
      {projectUrl ? (
        <a 
          href={projectUrl} 
          target="_blank" 
          rel="noopener"
          class="hover:text-primary transition-colors"
        >
          {projectTitle}
        </a>
      ) : (
        projectTitle
      )}
    </h3>
    
    <div class="flex flex-wrap items-center gap-2">
      <span class="text-sm bg-gray-100 text-gray-700 px-2 py-1 rounded-md flex items-center gap-1">
        <span>{typeInfo.icon}</span>
        {typeInfo.label}
      </span>
      {project.featured && (
        <span class="text-sm bg-yellow-100 text-yellow-800 px-2 py-1 rounded-md font-medium">
          ‚≠ê Featured
        </span>
      )}
    </div>
  </div>

  <!-- Summary/Description -->
  {project.summary && (
    <p class="text-gray-600 mb-4 leading-relaxed">
      {project.summary}
    </p>
  )}
  
  {project.description && (
    <div class="text-sm text-gray-500 mb-4 space-y-1">
      {project.description.split('\n').map(line => 
        line.trim() && (
          <p>{line.replace(/^-\s*/, '')}</p>
        )
      )}
    </div>
  )}

  <!-- Technologies -->
  <div class="mb-4 space-y-2">
    {project.languages && project.languages.length > 0 && (
      <div>
        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Languages</span>
        <div class="flex flex-wrap gap-1 mt-1">
          {project.languages.map(lang => (
            <span class="text-xs bg-blue-50 text-blue-700 px-2 py-1 rounded">
              {lang}
            </span>
          ))}
        </div>
      </div>
    )}
    
    {project.libraries && project.libraries.length > 0 && (
      <div>
        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Technologies</span>
        <div class="flex flex-wrap gap-1 mt-1">
          {project.libraries.map(lib => (
            <span class="text-xs bg-green-50 text-green-700 px-2 py-1 rounded">
              {lib}
            </span>
          ))}
        </div>
      </div>
    )}
  </div>

  <!-- Links -->
  <div class="flex flex-wrap gap-2 pt-4 border-t border-gray-100">
    {project.githubUrl && (
      <a 
        href={project.githubUrl} 
        target="_blank" 
        rel="noopener"
        class="inline-flex items-center gap-1.5 text-sm font-medium text-gray-700 hover:text-primary px-3 py-1.5 border border-gray-300 rounded-md hover:border-primary transition-all"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </a>
    )}
    {projectUrl && (
      <a 
        href={projectUrl} 
        target="_blank" 
        rel="noopener"
        class="inline-flex items-center gap-1.5 text-sm font-medium text-white bg-primary hover:bg-blue-600 px-3 py-1.5 rounded-md transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        View Live
      </a>
    )}
  </div>
</article>