---
/**
 * StrengthCard Component
 * Card for displaying core expertise/strengths
 */
export interface Props {
  title: string;
  description: string;
  icon?: string;
  className?: string;
}

const { 
  title,
  description,
  icon,
  className = '' 
} = Astro.props;
---

<div class={`bg-dark-card rounded-lg p-6 text-center hover:bg-dark-hover transition-colors ${className}`}>
  {icon && (
    <div class="text-3xl mb-4">
      {icon}
    </div>
  )}
  
  <h3 class="text-xl font-semibold text-text-primary mb-3">
    {title}
  </h3>
  
  <p class="text-text-secondary leading-relaxed">
    {description}
  </p>
  
  {/* Slot for additional content */}
  <slot />
</div>