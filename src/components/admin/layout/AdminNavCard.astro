---
/**
 * AdminNavCard Component
 * Dashboard navigation card with icon and description
 */

export interface Props {
  href: string;
  icon: 'briefcase' | 'code' | 'folder' | 'user' | 'book' | 'zap';
  color: 'blue' | 'green' | 'amber' | 'purple' | 'pink';
  title: string;
  description: string;
}

const { href, icon, color, title, description } = Astro.props;

const colorClasses = {
  blue: 'bg-accent-blue/20 text-accent-blue',
  green: 'bg-accent-green/20 text-accent-green',
  amber: 'bg-accent-amber/20 text-accent-amber',
  purple: 'bg-accent-purple/20 text-accent-purple',
  pink: 'bg-accent-pink/20 text-accent-pink',
};

const iconPaths = {
  briefcase: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  folder: 'M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z',
  user: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z',
  book: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
  zap: 'M13 10V3L4 14h7v7l9-11h-7z',
};
---

<a
  href={href}
  class="p-6 bg-dark-card border border-dark-border rounded-lg hover:border-accent-blue transition-colors group"
>
  <div class="flex items-center gap-4">
    <div class={`p-3 rounded-lg ${colorClasses[color]}`}>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[icon]} />
      </svg>
    </div>
    <div>
      <h3 class="font-semibold text-text-primary group-hover:text-accent-blue transition-colors">{title}</h3>
      <p class="text-sm text-text-muted">{description}</p>
    </div>
  </div>
</a>
