---
/**
 * AdminListHeader Component
 * Header for list pages with title, subtitle, and add button
 */

export interface Props {
  title: string;
  subtitle: string;
  addHref: string;
  addLabel: string;
}

const { title, subtitle, addHref, addLabel } = Astro.props;
---

<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-text-primary">{title}</h1>
    <p class="text-text-secondary mt-1 text-sm sm:text-base">{subtitle}</p>
  </div>
  <a
    href={addHref}
    class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-accent-blue hover:bg-accent-blue/80 text-white font-medium rounded-lg transition-colors whitespace-nowrap"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
    <span class="hidden sm:inline">{addLabel}</span>
    <span class="sm:hidden">Add</span>
  </a>
</div>
