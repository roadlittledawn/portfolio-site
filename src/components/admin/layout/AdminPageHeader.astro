---
/**
 * AdminPageHeader Component
 * Header for detail/edit pages with back button, title, and subtitle
 */

export interface Props {
  title: string;
  subtitle: string;
  backHref: string;
}

const { title, subtitle, backHref } = Astro.props;
---

<div class="flex items-center gap-4">
  <a
    href={backHref}
    class="p-2 text-text-muted hover:text-text-primary hover:bg-dark-card rounded-lg transition-colors"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
  </a>
  <div>
    <h1 class="text-3xl font-bold text-text-primary">{title}</h1>
    <p class="text-text-secondary mt-1">{subtitle}</p>
  </div>
</div>
