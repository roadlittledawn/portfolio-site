---
/**
 * CategorySection Component
 * Section container for categorized items
 */
import Icon from './Icon.astro';

export interface Props {
  title: string;
  icon?: string;
  count?: number;
  categoryKey?: string;
  className?: string;
}

const {
  title,
  icon,
  count,
  categoryKey,
  className = ''
} = Astro.props;
---

<div
  class={`category-section mb-8 ${className}`}
  data-category={categoryKey}
>
  <h2 class="text-2xl font-semibold text-text-primary mb-4 flex items-center gap-3">
    {icon && <Icon name={icon} size="md" class="text-text-muted" />}
    <span>{title}</span>
    {count !== undefined && (
      <span class="text-base font-normal text-text-muted">({count})</span>
    )}
  </h2>
  
  <div class="space-y-2">
    <slot />
  </div>
</div>