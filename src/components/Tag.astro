---
/**
 * Tag Component
 * Small label component for technologies, skills, etc.
 */
export interface Props {
  variant?: 'default' | 'blue' | 'green' | 'yellow' | 'red';
  size?: 'xs' | 'sm' | 'md';
  className?: string;
}

const { 
  variant = 'default',
  size = 'sm',
  className = '' 
} = Astro.props;

const sizeClasses = {
  xs: 'text-xs px-2 py-0.5',
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-2.5 py-1'
};

const variantClasses = {
  default: 'bg-dark-layer text-text-primary',
  blue: 'bg-accent-blue/20 text-accent-blue',
  green: 'bg-accent-green/20 text-accent-green',
  yellow: 'bg-accent-amber/20 text-accent-amber',
  red: 'bg-red-500/20 text-red-400'
};

const tagClasses = `inline-flex items-center font-medium rounded ${sizeClasses[size]} ${variantClasses[variant]} ${className}`;
---

<span class={tagClasses}>
  <slot />
</span>