---
/**
 * HeroSection Component
 * Hero section with title, subtitle, description pattern
 */
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  centered?: boolean;
  className?: string;
}

const { 
  title,
  subtitle,
  description,
  centered = true,
  className = '' 
} = Astro.props;

const containerClasses = `
  py-12 md:py-16 lg:py-20 border-b border-dark-border
  ${centered ? 'text-center' : ''}
  ${className}
`;
---

<section class={containerClasses}>
  <div class="max-w-4xl mx-auto px-4">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-primary mb-4 md:mb-6">
      {title}
    </h1>
    
    {subtitle && (
      <p class="text-xl md:text-2xl text-text-secondary font-medium mb-6 md:mb-8">
        {subtitle}
      </p>
    )}
    
    {description && (
      <div class="text-lg md:text-xl text-text-secondary max-w-3xl mx-auto leading-relaxed space-y-4">
        {/* Allow for HTML content in description */}
        <Fragment set:html={description} />
      </div>
    )}
    
    {/* Slot for additional content like buttons or actions */}
    <slot />
  </div>
</section>