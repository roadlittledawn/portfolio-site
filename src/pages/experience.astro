---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/PageHeader.astro';
import ExperienceCard from '../components/ExperienceCard.astro';
import careerData from '../data/careerData.json';

const title = 'Experience';
const description = 'Career journey spanning technical writing, software engineering, and leadership roles';

// Sort work experience by start date (most recent first)
const sortedWork = careerData.experiences.sort((a, b) => {
  const aDate = new Date(a.startDate);
  const bDate = new Date(b.startDate);
  return bDate.getTime() - aDate.getTime();
});
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto px-4 py-8">
    <PageHeader 
      title="Experience" 
      description="A chronological view of my professional experience spanning technical writing, software engineering, and leadership roles."
    />

    <!-- Timeline -->
    <section class="max-w-4xl mx-auto">
      <div class="space-y-6">
        {sortedWork.map((role) => (
          <ExperienceCard 
            role={role} 
            showHighlights={-1}
            className="relative"
          />
        ))}
      </div>
    </section>

    <!-- Career Stats -->
    <section class="max-w-4xl mx-auto mt-12 pt-8 border-t border-dark-border">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="bg-dark-bg-secondary rounded-lg p-6">
          <div class="text-2xl font-bold text-accent mb-2">11+</div>
          <div class="text-text-secondary">Years in Technical Writing</div>
        </div>
        <div class="bg-dark-bg-secondary rounded-lg p-6">
          <div class="text-2xl font-bold text-accent mb-2">7+</div>
          <div class="text-text-secondary">Years in Software Engineering</div>
        </div>
        <div class="bg-dark-bg-secondary rounded-lg p-6">
          <div class="text-2xl font-bold text-accent mb-2">3+</div>
          <div class="text-text-secondary">Years in Engineering Leadership</div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
