---
export const prerender = false;
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import AdminPageHeader from "../../../../components/admin/layout/AdminPageHeader.astro";
import { ProjectEditPage } from "../../../../components/admin/pages";

const { id } = Astro.params;
---

<AdminLayout title="Edit Project | Career Admin">
  <div class="space-y-6">
    <AdminPageHeader
      title="Edit Project"
      subtitle="Update this project"
      backHref={`/admin/projects/${id}`}
    />

    <ProjectEditPage client:only="react" projectId={id} />
  </div>
</AdminLayout>
