---
export const prerender = false;
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import AdminPageHeader from "../../../../components/admin/layout/AdminPageHeader.astro";
import { EducationEditPage } from "../../../../components/admin/pages";

const { id } = Astro.params;
---

<AdminLayout title="Edit Education | Career Admin">
  <div class="space-y-6">
    <AdminPageHeader
      title="Edit Education"
      subtitle="Update this education entry"
      backHref={`/admin/education/${id}`}
    />

    <EducationEditPage client:only="react" educationId={id} />
  </div>
</AdminLayout>
