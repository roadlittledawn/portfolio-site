---
export const prerender = false;
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import AdminPageHeader from "../../../../components/admin/layout/AdminPageHeader.astro";
import { ExperienceDetailPage } from "../../../../components/admin/pages";

const { id } = Astro.params;
---

<AdminLayout title="Experience Details | Career Admin">
  <div class="space-y-6">
    <AdminPageHeader
      title="Experience Details"
      subtitle="View experience information"
      backHref="/admin/experiences"
    />

    <ExperienceDetailPage client:only="react" experienceId={id} />
  </div>
</AdminLayout>
