---
export const prerender = false;
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import AdminPageHeader from "../../../../components/admin/layout/AdminPageHeader.astro";
import { ExperienceEditPage } from "../../../../components/admin/pages";

const { id } = Astro.params;
---

<AdminLayout title="Edit Experience | Career Admin">
  <div class="space-y-6">
    <AdminPageHeader
      title="Edit Experience"
      subtitle="Update this work experience"
      backHref={`/admin/experiences/${id}`}
    />

    <ExperienceEditPage client:only="react" experienceId={id} />
  </div>
</AdminLayout>
