---
export const prerender = false;
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import AdminPageHeader from "../../../../components/admin/layout/AdminPageHeader.astro";
import { SkillDetailPage } from "../../../../components/admin/pages";

const { id } = Astro.params;
---

<AdminLayout title="Skill Details | Career Admin">
  <div class="space-y-6">
    <AdminPageHeader
      title="Skill Details"
      subtitle="View skill information"
      backHref="/admin/skills"
    />

    <SkillDetailPage client:only="react" skillId={id} />
  </div>
</AdminLayout>
