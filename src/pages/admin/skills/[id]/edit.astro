---
export const prerender = false;
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import AdminPageHeader from "../../../../components/admin/layout/AdminPageHeader.astro";
import { SkillEditPage } from "../../../../components/admin/pages";

const { id } = Astro.params;
---

<AdminLayout title="Edit Skill | Career Admin">
  <div class="space-y-6">
    <AdminPageHeader
      title="Edit Skill"
      subtitle="Update this skill"
      backHref={`/admin/skills/${id}`}
    />

    <SkillEditPage client:only="react" skillId={id} />
  </div>
</AdminLayout>
